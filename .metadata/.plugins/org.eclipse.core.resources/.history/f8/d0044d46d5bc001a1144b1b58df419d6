package Arrays;

public class testingRotation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[]=new int[] {1,2,3,4,5,6,7};
		int n=2;
		for(int i=0; i<arr.length; i++) {
			System.out.println(arr[i]);
		}
		
//		rotate the array
		
		for(int i=0;i<n; i++) {
			
			int j, temp;
			temp =arr[0];
			for(j=0; j<arr.length-1; j++) {
				
				arr[j]=arr[j+1];
			}
			arr[j]=temp;
		}
		System.out.println();
		for(int i=0;i<arr.length;i++) {
			System.out.println(arr[i]);
		}
	}

}
