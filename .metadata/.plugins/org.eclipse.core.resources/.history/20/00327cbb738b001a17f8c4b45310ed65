
//Max of 3 numbers find out which one is greater

package conditionalStatements;
import java.util.Scanner;
public class NestedifElse {

	public static void main(String[] args) {
		System.out.println("Please enter the value to find out your lucky pot: ");
		
		Scanner sc = new Scanner(System.in);
		
		int  a= sc.nextInt();
		int  b= sc.nextInt();
		int  c= sc.nextInt();
		int result;
		
		if(a>b) {
			result = a;
			System.out.println("Here A is greater than B. The value of A is: " +" " +result);
		}
		if(a>c) {
			result = a;
			System.out.println("Again A is greater than C. The final greater value is A: " + " " +result);
		}
		
		else {
			System.out.println("Please check out with the another condition");
			if(b>c) {
				result = b;
				System.out.println("The value of B is greater than C. The value of B is: " + " " +result);
			}
			if(b>a) {
				result = b;
				System.out.println("The value of B is greater than A. The final greater value is B: "+ " "+ result);
			}
		}
//		result = c;
//		System.out.println("The value of C is greater among all. The greater value is C: "+ " " + result);
	}

}
