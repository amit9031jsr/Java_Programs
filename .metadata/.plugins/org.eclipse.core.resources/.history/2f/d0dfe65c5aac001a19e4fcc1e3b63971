package whileLoops;

import java.util.Scanner;

public class testingProgram3 {

	public static void main(String[] args) {
		// In this approach we are trying to fetch the input from the user and then finding the sum for it where looping starts from 0.
		
		int temp, sum=0;
		
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		
		for(int i=0; i<=n; i++) {
			
			temp = n%10;
			sum = sum+temp;
			
			n /=10;
		}
		System.out.println(sum);
		

	}

}
