		// Introduction for arrays
		
//		int[] marks = new int[10]; this is a type1 declaration of arrays
		
//		int[] marks;
//		marks = new int[10]; This is a type2 array declaration
		
		
//		int marks [] = new int[10]; we can declare it in the following ways
		
